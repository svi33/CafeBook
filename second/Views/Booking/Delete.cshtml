@model second.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="dl-horizontal">
       
        <dt>
            Название стола:
        </dt>
        <dd>
            @ViewBag.TableName
        </dd>
        <dt>
            Время размещения заказа:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt>
            Время бронирования:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CheckIn)
        </dd>
        <dt>
            Время снятия бронирования:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CheckOut)
        </dd>
        <dt>
            Количество гостей:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Guests)
        </dd>
        <dt>
            Цена заказа:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TotalFee)
        </dd>

        <dt>
            Заказчик:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt>
            Телефон:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CustomerPhone)
        </dd>
        <dt>
            Примечания:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.OtherRequests)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a href='javascript:history.go(-1)'>Назад</a>
    </form>
</div>
