@model IEnumerable<second.ViewModels.IndexUserViewModel>
@{
    ViewBag.Title = "Список пользователей";
}

<a asp-action="Create">Добавить пользователя</a>

<table class="table">
    <tr><th>Email</th><th>ФИО</th><th>Телефон</th><th>Ресторан</th><th></th></tr>
    @foreach (var user in Model)
    {
    <tr>
        <td>@user.Email</td>
        <td>@user.FullName</td>
        <td>@user.PersonPhone</td>
        <td>@user.RestaurantName    </td>
        <td>
            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                <a class="btn btn-sm btn-primary" asp-action="Change" asp-route-id="@user.Id">Изменить</a>
                <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Назначить ресторан</a>
                <button type="submit" class="btn btn-sm btn-danger">
                    Удалить
                </button>
            </form>
        </td>
    </tr>
    }
</table>